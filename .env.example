# ==================================
# DJANGO CONFIGURATION
# ==================================

# Security
SECRET_KEY=your-secret-key-here-generate-using-django-command
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ==================================
# DATABASE CONFIGURATION
# ==================================

# PostgreSQL
DB_NAME=kindra_cbo_db
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================================
# PAYMENT GATEWAYS
# ==================================

# M-Pesa Daraja API
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/payments/mpesa/callback

# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================================
# COMMUNICATION SERVICES
# ==================================

# Africa's Talking (SMS)
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=your_africastalking_api_key
AFRICASTALKING_SENDER_ID=KINDRA

# SendGrid (Email)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=info@kindra.org
SENDGRID_FROM_NAME=Kindra CBO
SENDGRID_TEMPLATE_DONATION_RECEIPT=d-template_id
SENDGRID_TEMPLATE_NEWSLETTER=d-template_id

# ==================================
# SOCIAL MEDIA APIS
# ==================================

# Facebook & Instagram
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_long_lived_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_id

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# ==================================
# CLOUD STORAGE
# ==================================

# Cloudinary (Images & Media)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==================================
# EXTERNAL SERVICES
# ==================================

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn
SENTRY_ENVIRONMENT=development

# ==================================
# APPLICATION SETTINGS
# ==================================

# CORS Settings (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10

# ==================================
# KENYAN REGULATORY
# ==================================

# NGO Details
NGO_REGISTRATION_NUMBER=your_ngo_registration_number
NGO_KRA_PIN=your_kra_pin

# Banking
BANK_ACCOUNT_NUMBER=your_bank_account
BANK_NAME=your_bank_name
BANK_SWIFT_CODE=your_swift_code
