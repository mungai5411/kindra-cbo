# =============================================
# Kindra CBO â€” Environment Variables Template
# Copy this file to .env and fill in your values
# =============================================

# --- Core Django ---
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# --- Frontend URL (used for email links) ---
# IMPORTANT: Used for all verification/password-reset links in emails.
FRONTEND_URL=https://kindra-cbo.vercel.app

# --- Database ---
# PostgreSQL (production)
DATABASE_URL=postgres://user:password@host:5432/kindra_db

# --- Redis (cache + Celery broker) ---
# When set, enables Redis cache automatically (rate limiting shared across workers)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# --- Cloudinary (media storage) ---
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# --- Email (Zoho SMTP) ---
EMAIL_HOST_USER=hello@yourdomain.com
EMAIL_HOST_PASSWORD=your-zoho-app-password

# --- JWT ---
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ALGORITHM=HS256

# --- CORS / CSRF ---
CORS_ALLOWED_ORIGINS=https://kindra-cbo.vercel.app,http://localhost:5173

# --- Google OAuth ---
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# --- Sentry (error monitoring) ---
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# --- Uploads ---
MAX_UPLOAD_SIZE_MB=10

# --- Backend URL (used in PDF templates) ---
BACKEND_URL=https://your-backend.onrender.com
